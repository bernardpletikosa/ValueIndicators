                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_margin"
                    android:layout_weight="1"
                    indicators:animation_duration="500"
                    indicators:background_color="@color/background"
                    indicators:line_direction="bottom_top"
                    indicators:line_height="150dp"
                    indicators:main_color="@color/main"
                    indicators:max_value="10"
                    indicators:min_value="-10"
                    indicators:text_color="@color/text_color"
                    indicators:text_size="30sp"
                    indicators:text_value_decimal="true"/>

