                indicators:background_color="@color/background"
                indicators:main_color="@color/main"
                indicators:max_value="10"
                indicators:min_value="-10"
                indicators:pie_center_paint="@color/app_background"
                indicators:pie_direction="clockwise"
                indicators:pie_inner_radius="70"
                indicators:quarter_pie_orientation="north_west"
                indicators:text_color="@color/background"
                indicators:text_size="15sp"
                indicators:text_value_decimal="true"/>

            <com.github.bernardpletikosa.indicators.pie.QuarterPieIndicator
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_margin"
                android:layout_weight="1"
                indicators:animation_duration="500"
                indicators:background_color="@color/background"
                indicators:main_color="@color/main"
